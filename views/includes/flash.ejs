<% if (success && success.length) { %>
  <div class="d-flex justify-content-center mt-3">
    <div class="alert alert-success alert-dismissible fade show  text-center" style="width: 30%;" role="alert">
      <p><%= success %></p>
      <button type="button" class="btn-close " data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% } %>

<% if (error && error.length) { %>
  <div class="d-flex justify-content-center mt-3">
    <div class="alert alert-danger alert-dismissible fade show  text-center" style="width: 30%;" role="alert">
      <p><%= error %></p>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% } %>